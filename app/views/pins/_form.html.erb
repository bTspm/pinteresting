
<%= form_for(@pin) do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="panel-body">
<div class="form-group">
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: "form-control" %>
  </div>
</div>
<% if user_signed_in? %>
<div class="panel-footer">
  <div class="actions">
    <%= f.submit class:"btn btn-primary" %>
    <% else %>
   <p> <h4> Pleae login or Sign Up </h4> </p>
   <%=link_to "Sign Up", '/users/sign_up', class: "btn btn-primary " %>
   <%=link_to "Log In", '/users/sign_in', class: "btn btn-default" %>
   <% end %>
  </div>
</div>
</div>
<% end %>
