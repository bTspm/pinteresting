<div class="panel panel-default">

<p id="notice"><%= notice %></p>

<div class="panel-heading">
<h1>Listing Pins</h1>
</div>

<div class="panel-body">
<table border="2" style="width:100%">
  <thead>
    <tr>
      <th>Pin ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.id %></td>
        <td><%= pin.title %></td>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %></td>


        <td><%= link_to 'Show', pin_path(pin) %></td>
        <% if user_signed_in? %>
        <% if pin.user == current_user %>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<div class="panel-footer">
<%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
</div>
</div>
</div>
